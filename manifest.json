{
  "manifest_version": 3,
  "name": "ツイート事故防止",
  "version": "1.0",
  "description": "特定のアカウントでCtrl+Enterでツイートできなくし、警告を表示",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ツイート事故防止設定"
  },
  "options_page": "options.html"
} 